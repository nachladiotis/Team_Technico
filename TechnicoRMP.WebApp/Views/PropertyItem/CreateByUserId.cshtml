@model CreatePropertyItemViewmodel

@{
    ViewData["Title"] = "Create Property Item";
}

<h1>Create a Property Item</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="CreateByUserId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- E9Number -->
            <div class="form-group">
                <label asp-for="E9Number" class="control-label">E9 Number</label>
                <input asp-for="E9Number" class="form-control" placeholder="Enter E9 Number" />
                <span asp-validation-for="E9Number" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Year of Construction -->
            <div class="form-group">
                <label asp-for="YearOfConstruction" class="control-label">Year of Construction</label>
                <input asp-for="YearOfConstruction" class="form-control" placeholder="Enter Year of Construction" />
                <span asp-validation-for="YearOfConstruction" class="text-danger"></span>
            </div>

            <!-- Property Type Dropdown -->
            <div class="form-group">
                <label class="control-label" for="EnPropertyType">Property Type</label>
                <select class="form-control" id="EnPropertyType" name="EnPropertyType">
                    <option value="">Select Type of Item</option>
                    <option value="DetachedHouse">Detached House</option>
                    <option value="Maisonet">Maisonet</option>
                    <option value="Apartment">Apartment</option>
                </select>
            </div>

            <!-- Active Checkbox -->
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsActive" id="IsActive" />
                <label class="form-check-label" for="IsActive">@Html.DisplayNameFor(model => model.IsActive)</label>
            </div>

            <!-- UserId Hidden Field -->
            <input type="hidden" asp-for="UserId" value="@ActiveUser.User!.Id" />

            <!-- Submit Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<!-- Back to List -->
<div class="mt-3">
    <a asp-action="GetPropertyItemByUserId" asp-route-id="@ActiveUser.User!.Id" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

