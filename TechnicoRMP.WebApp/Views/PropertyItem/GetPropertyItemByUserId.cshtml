@model List<TechnicoRMP.WebApp.Models.PropertyItemViewModel>

@{
    ViewData["Title"] = "GetPropertyItemByUserId";
}

<h1>My Items</h1>

<div class="container-fluid">
    <div class="row justify-content-center">
        <form asp-controller="PropertyItem" asp-action="Index" method="get" class="col-md-6">
        </form>
    </div>

    <div class="row justify-content-center mt-3">
        <p>
            <a asp-action="CreateByUserId" class="btn btn-success">Create new Item</a>
        </p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].E9Number)</th>
                <th>@Html.DisplayNameFor(model => model[0].Address)</th>
                <th>@Html.DisplayNameFor(model => model[0].YearOfConstruction)</th>
                <th>@Html.DisplayNameFor(model => model[0].EnPropertyType)</th>
                <th>@Html.DisplayNameFor(model => model[0].IsActive)</th>
                <th>@Html.DisplayNameFor(model => model[0].UserId)</th>
                <th>Actions</th> <!-- Extra column for actions (Edit/Delete) -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model => item.E9Number)</td>
                    <td>@Html.DisplayFor(model => item.Address)</td>
                    <td>@Html.DisplayFor(model => item.YearOfConstruction)</td>
                    <td>@Html.DisplayFor(model => item.EnPropertyType)</td>
                    <td>@Html.DisplayFor(model => item.IsActive)</td>
                    <td>@Html.DisplayFor(model => item.UserId)</td>
                    <td>
                        <a href="@Url.Action("Edit", "PropertyItem", new { id = item.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteByUser", "PropertyItem", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="alert alert-warning">No property items found for the specified user.</p>
}


