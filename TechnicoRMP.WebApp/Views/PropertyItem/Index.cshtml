@model IEnumerable<TechnicoRMP.WebApp.Models.PropertyItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>

<div class="container-fluid">
    <!-- Search Form -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-controller="PropertyItem" asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search by property..." />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <br>

    <!-- Create New Item Link -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <p>
                <a asp-action="Create" class="btn btn-success">Create New Item</a>
            </p>
        </div>
    </div>

    <!-- Property Items Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.E9Number)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.YearOfConstruction)</th>
                    <th>@Html.DisplayNameFor(model => model.EnPropertyType)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.E9Number)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.YearOfConstruction)</td>
                        <td>@Html.DisplayFor(modelItem => item.EnPropertyType)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                        <td>
                            <!-- Edit and Delete Buttons -->
                            <a href="@Url.Action("Edit", "PropertyItem", new { id = item.Id })" class="btn btn-primary btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "PropertyItem", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
