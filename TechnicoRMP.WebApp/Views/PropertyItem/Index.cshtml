@model IEnumerable<TechnicoRMP.WebApp.Models.PropertyItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container-fluid">
    <div class="col">
        <form asp-controller="PropertyItem" asp-action="Index" method="get">
            <div class="row">
                <div class="col-sm-3"> <input type="text" name="searchString" class="form-control" /> </div>
                <div class="col-sm-1"> <input type="submit" value="Search" class="btn btn-primary" /> </div>
            </div>
        </form>
        <br>
    </div>
</div>

<p>
    <a asp-action="Create">Create new Item</a>
</p>
<table class="table" name="myForm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.E9Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfConstruction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnPropertyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.E9Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfConstruction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnPropertyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
              
                @Html.ActionLink("Delete", "Delete", new { id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
