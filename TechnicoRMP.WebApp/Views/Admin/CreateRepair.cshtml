@using TechnicoRMP.Models;
@using TechnicoRMP.Shared.Dtos;
@model CreatePropertyRepairRequest;

<h1>Create Property Repair</h1>

<form id="repairForm" action="/Admin/CreateRepair" method="post">
    <div class="form-group">
        <label for="UserId">Select User</label>
        <select id="UserId" name="UserId" class="form-control" required>
            <option value="">-- Select a User --</option>
            @foreach (var user in ViewData["Users"] as List<UserViewmodel>)
            {
                <option value="@user.Id">@user.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="RepairStatus">Repair Status</label>
        <select class="form-control" id="RepairStatus" name="RepairStatus" required>
            <option value="0">Pending</option>
            <option value="1">In Progress</option>
            <option value="2">Completed</option>
        </select>
    </div>
    <div class="form-group">
        <label for="TypeOfRepair">Type of Repair</label>
        <select class="form-control" id="TypeOfRepair" name="TypeOfRepair" required>
            <option value="0">Painting</option>
            <option value="1">Insulation</option>
            <option value="2">Frames</option>
            <option value="3">Plumbing</option>
            <option value="4">Electrical Work</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="Cost">Cost</label>
        <input type="number" class="form-control" id="Cost" name="Cost" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Enter a brief description of the repair" required></textarea>
    </div>
    <div class="form-group">
        <label for="Date">Date</label>
        <input type="date" class="form-control" id="Date" name="Date" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
<a href="@Url.Action("Repairs", "Admin")" class="btn btn-secondary mt-3">Back to Repairs</a>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        <strong>Error:</strong> @ViewData["ErrorMessage"]
    </div>
}